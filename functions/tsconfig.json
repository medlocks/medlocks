{
  "compilerOptions": {
    "target": "ES2020",                 // Modern JS target
    "module": "commonjs",               // Firebase expects CommonJS
    "lib": ["ES2020"],                  // Standard libraries
    "strict": true,                     // Enable all strict type-checking
    "esModuleInterop": true,            // Allow import/export interop
    "skipLibCheck": true,               // Skip type checking node_modules
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"                     // Compiled JS output
  },
  "include": ["src/**/*"],              // Compile all TS files in src
  "exclude": ["node_modules", "lib"]    // Ignore dependencies and output
}

